<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" minHeight="425.0" minWidth="980.0"
            xmlns="http://javafx.com/javafx/null">
    <left>
        <AnchorPane>
            <children>
                <Label text="Fenêtres de livraison (TODO)" underline="true"/>
                <ListView fx:id="fenetresLivraisonListView" layoutX="14.0" layoutY="16.0" prefHeight="481.0"
                          prefWidth="280.0"/>
            </children>
        </AnchorPane>
    </left>
    <center>
        <AnchorPane id="planCanvasAnchorPane" fx:id="planCanvasAnchorPane"/>
    </center>
    <top>
        <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <items>
                <Button mnemonicParsing="false" onAction="#chargerPlan" text="Charger plan"/>
                <Button mnemonicParsing="false" onAction="#chargerDemandeLivraisons" text="Charger livraisons"/>
                <Button mnemonicParsing="false" onAction="#calculerItineraire" text="Calculer l'itinéraire"/>
                <Button disable="true" mnemonicParsing="false" onAction="#toutDeselectionner" text="Tout désélec"/>
                <Button disable="true" mnemonicParsing="false" onAction="#genererFeuilleDeRoute"
                        text="Générer feuille de route"/>
                <Button mnemonicParsing="false" onAction="#annulerDerniereAction" text="Annuler"/>
                <Button mnemonicParsing="false" onAction="#rejouerDerniereAction" text="Rejouer"/>
                <Button mnemonicParsing="false" onAction="#ajouterLivraison" text="+"/>
                <Button mnemonicParsing="false" onAction="#supprimerLivraison" text="Supprimer"/>
                <Button mnemonicParsing="false" onAction="#echangerLivraisons" text="Echanger"/>
            </items>
        </ToolBar>
    </top>
</BorderPane>
